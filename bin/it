#!/usr/bin/env ruby
require 'optparse'

$:.unshift File.dirname(__FILE__) + "/../lib"

require 'it'

args = ARGV.dup

options = {}

OptionParser.new do |o|
  o.banner = "usage: it COMMAND [ARGS]"
  o.separator ""

  o.on_tail("-v", "--verbose", "enable verbose mode") do
    options[:verbose] = true
  end
end.parse!(args)

It::Command.new(*args[0..1], args[2..-1], options).run

